<style>
   h1, table tr th,td {
        text-align: center;
    }
</style>
@{
    ViewBag.Title = "Index";
}

<h1 style="color:goldenrod">Employee Information</h1>
<p>
    <button id="addEmp" class="btn btn-success" data-toggle="modal" data-target="#addModal">Create New</button>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Designation</th>
            <th>Gender</th>
            <th>Salary</th>
            <th style="width:150px">Action</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
<br />
<hr />
<div class="modal fade" id="addModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close" data-dismiss="modal">&times;</button>
                <h4 style="text-align:center"><label id="title"></label></h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-6 col-lg-offset-3">
                            <input id="id" type="hidden" class="form-control" />
                            <label>Name</label>
                            <input id="name" class="form-control" placeholder="Enter your name"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6 col-lg-offset-3">
                            <label>Designatin</label><select id="designatin" class="form-control">
                                <option>Select Designation</option>
                                <option value="PM">PM</option>
                                <option value="APM">APM</option>
                                <option value="GM">GM</option>
                                <option value="Incharge">Incharge</option>
                                <option value="Manager">Manager</option>
                                <option value="Worker">Worker</option>

                            </select>
                         
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6 col-lg-offset-3">

                            <label>Gender</label>
                            <select id="gender" class="form-control">
                                <option>Select Gender</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
        
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6 col-lg-offset-3">

                            <label>Salary</label>
                            <input type="number" id="salary" class="form-control" placeholder="Enter your Salary"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6 col-lg-offset-4">
                            <button type="submit" id="btnSave" class="btn btn-default btn-lg">Save</button>-<button id="btnCloss" class="btn btn-danger btn-lg" data-dismiss="modal">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>
<div class="modal fade" id="deleteModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close" data-dismiss="modal">&times;</button>
                <h4 style="text-align:center"><label id="title"></label></h4>
            </div>
            <div class="modal-body">
                <h3>Are you sure to delete????</h3>
            </div>
            <div class="modal-footer">
                <div class="col-md-6 col-lg-offset-4">
                    <button type="button" id="btndelete" class="btn btn-success btn-lg">Yes</button>-<button id="btnCloss" class="btn btn-danger btn-lg" data-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>
</div>
<hr />

@section scripts{
    <script src="~/Scripts/employee.js"></script>
}
